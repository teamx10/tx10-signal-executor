{
  "manifest_version": 3,
  "name": "Signal Executor",
  "description": "Provides a request entry form only on the HashHedge trade page.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Signal Executor",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.hashhedge.com/client/trade*",
    "https://cb.hashhedge.com/*",
    "https://trader.bitfunded.com/client/trade*",
    "https://cb.bitfunded.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.hashhedge.com/client/trade*",
        "https://cb.hashhedge.com/*",
        "https://trader.bitfunded.com/client/trade*",
        "https://cb.bitfunded.com/*"
      ],
      "js": [
        "popup.js"
      ],
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
